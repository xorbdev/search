{% set meta = craft.search.termMapsMeta %}

{% extends meta.layout %}
{% import '_includes/forms' as forms %}
{% import 'search/_includes/forms' as searchForms %}

{% if id %}
    {% set title = 'Edit Search Term Map'|t('search') %}
    {% set pageTitle = 'Edit'|t('search') %}
{% else %}
    {% set title = 'New Search Term Map'|t('search') %}
    {% set pageTitle = 'New'|t('search') %}
{% endif %}

{% block actionButton %}
    <div class="buttons">
        <div class="btngroup submit">
            <input type="submit" class="btn submit" value="{{'Save'|t('search')}}">
        </div>
    </div>
{% endblock %}

{% block content %}
    {{actionInput('search/term-maps/save')}}
    {{redirectInput(meta.url)}}

    {% if id %}<input type="hidden" name="data[id]" value="{{id}}">{% endif %}

    {% if item.getFirstError('general') %}
        <div class="error">
            <span class="visually-hidden">{{'Error:'|t('app')}}</span>
            {{item.getFirstError('general')}}
        </div>
    {% endif %}

    {{forms.textField({
        first: not item.getFirstError('general'),
        label: 'Search Term'|t('search'),
        name: 'data[term]',
        value: item.term,
        errors: item.getErrors('term'),
        required: true,
    })}}

    {{forms.textField({
        label: 'Alternate'|t('search'),
        name: 'data[alternate]',
        value: item.alternate,
        errors: item.getErrors('alternate'),
        required: true,
    })}}

    {% if craft.app.isMultisite %}
        {{forms.selectField({
            label: 'Site'|t('app'),
            name: 'data[siteId]',
            options: craft.search.siteOptions(''),
            value: item.siteId,
            errors: item.getErrors('siteId'),
        })}}
    {% endif %}
{% endblock %}
