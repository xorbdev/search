{% set meta = craft.search.ignoreRulesMeta %}

{% extends meta.layout %}
{% import '_includes/forms' as forms %}
{% import 'search/_includes/forms' as searchForms %}

{% if id %}
    {% set title = 'Edit Ignore Rule'|t('search') %}
    {% set pageTitle = 'Edit'|t('search') %}
{% else %}
    {% set title = 'New Ignore Rule'|t('search') %}
    {% set pageTitle = 'New'|t('search') %}
{% endif %}

{% block actionButton %}
    <div class="buttons">
        <div class="btngroup submit">
            <input type="submit" class="btn submit" value="{{'Save'|t('search')}}">
        </div>
    </div>
{% endblock %}

{% block content %}
    {{actionInput('search/ignore-rules/save')}}
    {{redirectInput(meta.url)}}

    {% if id %}<input type="hidden" name="data[id]" value="{{id}}">{% endif %}

    {% if item.getFirstError('general') %}
        <div class="error">
            <span class="visually-hidden">{{'Error:'|t('app')}}</span>
            {{item.getFirstError('general')}}
        </div>
    {% endif %}

    {{forms.textField({
        first: not item.getFirstError('general'),
        label: 'Name'|t('search'),
        instructions: 'This name is used for your identification only.'|t('search'),
        name: 'data[name]',
        value: item.name,
        errors: item.getErrors('name'),
        required: true,
    })}}

    {{searchForms.urlComparatorField({
        label: 'Result URI'|t('search'),
        instructions: 'Ignore displaying results for pages that match this URI comparison.'|t('search'),
        tip: 'Query param values will always compare using exact match. Leave query param values empty to ensure not set. Any query params not specified will be ignored. The path portion will always be compared against a path with normalized slashes (/like/this).'|t('search'),
        placeholder: '/page/path?queryParam=value'|t('search'),
        name: 'resultUrl',
        comparator: item.resultUrlComparator,
        value: item.resultUrlValue,
        errors: item.getErrors('resultUrlValue'),
        required: true,
    })}}

    {{forms.lightswitchField({
        label: 'Ignore Absolutely'|t('search'),
        instructions: 'When enabled, matching URIs will not be added to the results table.'|t('search'),
        name: 'data[absolute]',
        on: item.absolute,
        errors: item.getErrors('absolute'),
    })}}

    {% if craft.app.isMultisite %}
        {{forms.selectField({
            label: 'Site'|t('app'),
            name: 'data[siteId]',
            options: craft.search.siteOptions(''),
            value: item.siteId,
            errors: item.getErrors('siteId'),
        })}}
    {% endif %}
{% endblock %}
