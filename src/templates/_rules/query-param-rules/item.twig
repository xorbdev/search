{% set meta = craft.search.queryParamRulesMeta %}

{% extends meta.layout %}
{% import '_includes/forms' as forms %}
{% import 'search/_includes/forms' as searchForms %}

{% if id %}
    {% set title = 'Edit Query Param Rule'|t('search') %}
    {% set pageTitle = 'Edit'|t('search') %}
{% else %}
    {% set title = 'New Query Param Rule'|t('search') %}
    {% set pageTitle = 'New'|t('search') %}
{% endif %}

{% block actionButton %}
    <div class="buttons">
        <div class="btngroup submit">
            <input type="submit" class="btn submit" value="{{'Save'|t('search')}}">
        </div>
    </div>
{% endblock %}

{% block content %}
    {{actionInput('search/query-param-rules/save')}}
    {{redirectInput(meta.url)}}

    {% if id %}<input type="hidden" name="data[id]" value="{{id}}">{% endif %}

    {% if item.getFirstError('general') %}
        <div class="error">
            <span class="visually-hidden">{{'Error:'|t('app')}}</span>
            {{item.getFirstError('general')}}
        </div>
    {% endif %}

    <p class="{{item.getFirstError('general') ? '' : 'first'}}">
        {{'By default all query params will be stripped from automatically indexed URIs. Query param rules allow you to whitelist the query params that affect the output of pages in a meaningful way.'}}
    </p>

    {{forms.textField({
        label: 'Name'|t('search'),
        instructions: 'This name is used for your identification only.'|t('search'),
        name: 'data[name]',
        value: item.name,
        errors: item.getErrors('name'),
        required: true,
    })}}

    {{searchForms.urlComparatorField({
        label: 'Result URI'|t('search'),
        instructions: 'Allow query params on pages that match this URI comparison.'|t('search'),
        tip: 'Query param values will always compare using exact match. Leave query param values empty to ensure not set. Any query params not specified will be ignored. The path portion will always be compared against a path with normalized slashes (/like/this).'|t('search'),
        placeholder: '/page/path'|t('search'),
        name: 'resultUrl',
        comparator: item.resultUrlComparator,
        value: item.resultUrlValue,
        errors: item.getErrors('resultUrlValue'),
        required: true,
    })}}

    {{searchForms.queryParamComparatorField({
        label: 'Query Param'|t('search'),
        instructions: 'Allow query param that matches this comparison. The compare method is applied to the value only.'|t('search'),
        name: 'queryParam',
        comparator: item.queryParamComparator,
        key: item.queryParamKey,
        value: item.queryParamValue,
        errors: item.getErrors('queryParamValue'),
        required: true,
    })}}

    {% if craft.app.isMultisite %}
        {{forms.selectField({
            label: 'Site'|t('app'),
            name: 'data[siteId]',
            options: craft.search.siteOptions(''),
            value: item.siteId,
            errors: item.getErrors('siteId'),
        })}}
    {% endif %}
{% endblock %}
