{
  "name": "xorb/search",
  "description": "Index pages and files and provide search results for your website reguardless of setup.",
  "type": "craft-plugin",
  "keywords": [
      "craft",
      "cms",
      "craftcms",
      "craft-plugin",
      "search"
  ],
  "license": "proprietary",
  "authors": [
    {
      "name": "XORB",
      "homepage": "https://xorb.dev"
    }
  ],
  "support": {
    "issues": "https://github.com/xorbdev/search/issues",
    "source": "https://github.com/xorbdev/search",
    "docs": "https://xorb.dev/plugins/search/docs"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.2",
    "craftcms/cms": "^5.0.0",
    "smalot/pdfparser": "^2.8"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "craftcms/phpstan": "dev-main",
    "craftcms/rector": "dev-main",
    "phpunit/phpunit": "^11.1"
  },
  "autoload": {
    "psr-4": {
      "xorb\\search\\": "src/"
    }
  },
  "extra": {
    "handle": "xsearch",
    "name": "Search",
    "developer": "XORB"
  },
  "scripts": {
    "phpstan": "phpstan --memory-limit=4G",
    "phpunit": "phpunit"
  },
  "config": {
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    }
  }
}
